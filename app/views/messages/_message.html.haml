.messages
  .messages__upper-info
    .messages__upper-info__talker
      = message.user.name
    .messages__upper-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages__text
    - if message.content.present?
      %p.messages__text__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

